<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainActivity">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:onClick="startGravityActivity" android:text="Gravity"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Accelerometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button2"
            android:onClick="startAccelerometerActivity"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/button"/>
    <Button
            android:text="Accelerometer uncalibrated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button3"
            android:onClick="startAccelerometerUncalibratedActivity" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:text="Gyroscope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button4"
            android:onClick="startGyroscopeActivity" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button3" app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:text="GyroscopeUncalibrated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button5"
            android:onClick="startGyroscopeUcalibratedActivity" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button4"/>
    <Button
            android:text="LinerarAcceleration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button6"
            android:onClick="startLinearAccelerationActivity" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button5" app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:text="RotationVector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button7"
            android:onClick="startRotationVectorActivity" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button6" app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:text="Steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button8"
            android:onClick="startStepsActivity" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button7"/>
</androidx.constraintlayout.widget.ConstraintLayout>