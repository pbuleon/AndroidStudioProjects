<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Gravity">

    <TextView
            android:text="Gravity Y:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:id="@+id/textView3" android:textSize="36sp"
            android:layout_marginTop="23dp" app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
            android:text="Gravity X:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:id="@+id/textView4" android:textSize="36sp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/gravityZ"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView2" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="Y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/gravityY"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            android:layout_marginRight="16dp" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gravityX"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
    <TextView
            android:text="Gravity Z:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:id="@+id/textView2" android:textSize="36sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="Force of gravity along the 3 axis."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>