<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RotationVector">

    <TextView
            android:text="Rotation vector component along the 3 axis."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView28" android:textSize="36sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:textStyle="bold"/>
    <TextView
            android:text="Vector X:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:id="@+id/textView29" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/textView28" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Vector Y:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:id="@+id/textView30" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/textView29" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Vector Z:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView31" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/textView30" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="Scalar:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView32" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/textView31" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rotationVectorX"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView29"/>
    <TextView
            android:text="Y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/rotationVectorY"
            android:textSize="24sp"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView30"/>
    <TextView
            android:text="Z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/rotationVectorZ"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView31" android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/rotationScalar"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView32" android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>