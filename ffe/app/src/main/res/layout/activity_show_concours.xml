<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/noir"
    android:orientation="vertical" >

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
	    android:background="@layout/bords_concours" >

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/concoursNumView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:gravity="center"
                android:text="201500000"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/blanc"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/etatView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:background="@color/blanc"
                    android:text="inconnu"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/noir"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical" >
                </LinearLayout>

                <TextView
                    android:id="@+id/dateView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:background="@color/blanc"
                    android:text="dateView"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/noir"
                    android:textSize="15sp" />
            </LinearLayout>
            
                <TextView
        android:id="@+id/comTitre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Commentaire"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp" />

            <TextView
                android:id="@+id/commentaire"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/blanc"
                android:text="commentaire"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/noir"
                android:textSize="15sp" />

                <TextView
                    android:id="@+id/orgaTitre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Organisateur"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp" />

            <TextView
                android:id="@+id/concoursOrganisateur"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/blanc"
                android:text="Organizateur"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/noir" />

                <TextView
                    android:id="@+id/intituleTitre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Intitulé"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp" />

            <TextView
                android:id="@+id/epreuveIntitule"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/blanc"
                android:text="Intitulé"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/noir"
                android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp" >

                    <TextView
                        android:id="@+id/listSMSTitre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:text="Liste des SMS"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:onClick="addSmsHandler"
                        android:src="@drawable/plus" />
                </LinearLayout>

                <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="250dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@color/blanc" >

                    <LinearLayout
                        android:id="@+id/smsListeView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >
                    </LinearLayout>
                </ScrollView>

        </LinearLayout>
    </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="supClickHandler"
                android:text="Supprimer" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="vertical" >

           <Button
               android:id="@+id/button2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:onClick="ouvrirClickHandler"
               android:text="Ouvrir" />

        </LinearLayout>
        
        
    </LinearLayout>
 
    
    
</LinearLayout>
</LinearLayout>
